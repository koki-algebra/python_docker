{
	"name": "python-docker",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"njpwerner.autodocstring",
				"ms-toolsai.jupyter"
			],
			"settings": {
				"python.defaultInterpreterPath": ".venv/bin/python"
			}
		}
	},
	"postCreateCommand": "poetry install --no-root"
}